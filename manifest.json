{
  	"name": "__MSG_appName__",
  	"description": "__MSG_appDescription__",
  	"version": "1.0.8.8",
  	"author" : "ISHII Eiju",
  	"manifest_version": 2,
  	"default_locale": "en",
  	"permissions": [
		"<all_urls>",
  		"app.runtime",
  		"app.window",
		"webview",
  		"clipboardRead",
  		"clipboardWrite",
  		"contextMenus",
  		"identity",
  		"storage",
		"system.storage",
		"fileSystem",
		"unlimitedStorage",
		"i18n"
  	],
  	"icons": {
  		"16": "images/tweemeister-16.png",
		"32": "images/tweemeister-32.png",
		"64": "images/tweemeister-64.png",
  		"128": "images/tweemeister-128.png"
  	},
  	"app": {
  		"background": {
  			"scripts": [
  				"scripts/main.js",
  				"scripts/chromereload.js"
  			]
  		}
  	}
  }